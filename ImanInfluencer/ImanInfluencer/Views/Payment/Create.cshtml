@model ImanInfluencer.Models.Payment1

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserDashboardLayout.cshtml";
    var userid = ViewBag.id;

}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cardname" class="control-label"></label>
                <input asp-for="Cardname" class="form-control" />
                <span asp-validation-for="Cardname" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Userid" class="control-label"></label>
                <select value="@userid" asp-for="Userid" class="form-control" asp-items="ViewBag.Userid"></select>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



